<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductOneView">


    <EditText
        android:id="@+id/inputSeacrh"
        android:layout_width="358dp"
        android:layout_height="38dp"
        android:layout_below="@+id/products"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="12dp"
        android:width="@dimen/et_width"
        android:height="@dimen/et_height"
        android:background="@drawable/edittext"
        android:drawableEnd="?android:attr/actionModeWebSearchDrawable"
        android:elevation="10dp"
        android:ems="10"
        android:hint="@string/et_Search"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:paddingLeft="@dimen/et_padding_lr"
        android:paddingRight="@dimen/et_padding_lr"
        android:textColorHint="@color/et_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/products"
        tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/products"
        android:layout_width="167dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="126dp"
        android:layout_toEndOf="@+id/backtohome"
        android:fontFamily="arial"
        android:text="@string/pharmacy"
        android:textColor="@color/blue"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/backtohome"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/backtohome"
        android:layout_width="28dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="65dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/image_single_viewActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputSeacrh"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="89dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="89dp"
        app:srcCompat="@drawable/select_product_image" />

    <TextView
        android:id="@+id/product_nameActivity"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_single_viewActivity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:hint="ProductName"
        android:text="ProductName" />

    <TextView
        android:id="@+id/product_priceActivity"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_nameActivity"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="117dp"
        android:hint="Product Price"
        android:text="Product Price" />

    <TextView
        android:id="@+id/product_descriptionActivity"
        android:layout_width="325dp"
        android:layout_height="52dp"
        android:layout_below="@+id/product_priceActivity"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="34dp"
        android:hint="Product Description"
        android:text="Product Description" />

    <Button
        android:id="@+id/btn_addtocart"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="83dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="10dp"
        android:text="Button" />

    <Button
        android:id="@+id/btn_buy"
        android:layout_width="103dp"
        android:layout_height="58dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="9dp"
        android:layout_toEndOf="@+id/btn_addtocart"
        android:text="Button" />



</RelativeLayout>