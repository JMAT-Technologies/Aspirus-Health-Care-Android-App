<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/profile_card_width"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="4dp"
    android:elevation="10dp"
    app:cardElevation="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:id="@+id/appointment_icon"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:alpha="0.4"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/appointment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="11dp" />

        <TextView
            android:id="@+id/appointment_dr"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="118dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            android:text="Dr."
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/appointment_doc_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/appointment_dr"
            android:textColor="@color/black"
            android:text="Doctor Name"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/appointment_time"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appointment_doc_name"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="43dp"
            android:layout_toEndOf="@+id/appointment_date"
            android:text="Time"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/appointment_date"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appointment_doc_name"
            android:layout_alignParentStart="true"
            android:layout_marginStart="118dp"
            android:layout_marginTop="7dp"
            android:text="Date"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>